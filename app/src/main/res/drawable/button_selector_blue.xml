<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="1dp" />
        <stroke android:width="1dip" android:color="#0288D1" />
        <gradient android:angle="-90" android:startColor="#0288D1" android:endColor="#0288D1"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="1dp" />
        <stroke android:width="1dip" android:color="#448AFF" />
        <solid android:color="#448AFF"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="1dp" />
        <stroke android:width="1dip" android:color="#03A9F5" />
        <gradient android:angle="-90" android:startColor="#03A9F4" android:endColor="#03A9F4" />
    </shape>
</item>
</selector>