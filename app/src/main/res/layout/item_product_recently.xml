<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_product">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/iv_product_photo"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/example"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_description"
                android:layout_toRightOf="@+id/iv_product_photo"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:lines="2"
                android:text="Fashionable Men's Athletic Shoes With Color Matching and Letter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_product_photo"
                android:layout_below="@+id/tv_product_description"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_product_price_promotion"
                        android:textColor="@color/pink"
                        android:textSize="22sp"
                        android:text="$21.2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_product_price"
                        android:layout_below="@id/tv_product_price_promotion"
                        android:layout_alignRight="@id/tv_product_price_promotion"
                        android:textSize="15sp"
                        android:text="$21.2"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info_highlight"
                            android:textSize="12sp"
                            android:text="34"
                            android:id="@+id/tv_amount_touch"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/pink"
                            android:text="@string/touching"
                            android:id="@+id/tv_text_touch"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info"
                            android:textSize="12sp"
                            android:text="50"
                            android:id="@+id/tv_amount_try"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/light_grey"
                            android:text="@string/tried"
                            android:id="@+id/tv_text_try"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info"
                            android:textSize="12sp"
                            android:text="34"
                            android:id="@+id/tv_amount_buy"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/light_grey"
                            android:text="@string/buy"
                            android:id="@+id/tv_text_buy"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>