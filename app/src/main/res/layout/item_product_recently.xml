<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/card_view_product">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="@dimen/photo_product_width_heigh"
                android:layout_height="@dimen/photo_product_width_heigh"
                android:id="@+id/iv_product_photo"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/shoes1"
                android:scaleType="fitXY"/>

            <com.devspark.robototextview.widget.RobotoTextView
                app:typeface="roboto_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_description"
                android:layout_toRightOf="@+id/iv_product_photo"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/font_size_product_description"
                android:lines="2"
                android:ellipsize="end"
                android:text="Fashionable Men's Athletic Shoes With Color Matching and Letter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_product_photo"
                android:layout_below="@+id/tv_product_description"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/ln_product_price_promotion">
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pink"
                            android:textSize="12sp"
                            android:text="$"/>
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_product_price_promotion"
                            android:textColor="@color/pink"
                            android:textSize="@dimen/font_size_product_price_promotion"
                            android:text="17.2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/ln_product_price_promotion"
                        android:layout_alignRight="@id/ln_product_price_promotion">
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:textSize="@dimen/font_size_product_price_original"
                            android:text="$"/>
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_product_price"
                            android:textSize="@dimen/font_size_product_price_original"
                            android:text="21.2"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info_highlight"
                            android:textSize="12sp"
                            android:text="34"
                            android:id="@+id/tv_amount_touch"/>
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="10sp"
                            android:textColor="@color/pink"
                            android:text="@string/touching"
                            android:id="@+id/tv_text_touch"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info"
                            android:textSize="12sp"
                            android:text="50"
                            android:id="@+id/tv_amount_try"/>
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="10sp"
                            android:textColor="@color/light_grey"
                            android:text="@string/tried"
                            android:id="@+id/tv_text_try"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="@dimen/product_info_number_width"
                            android:layout_height="@dimen/product_info_number_height"
                            android:gravity="center"
                            android:background="@drawable/ic_product_info"
                            android:textSize="12sp"
                            android:text="34"
                            android:id="@+id/tv_amount_buy"/>
                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="10sp"
                            android:textColor="@color/light_grey"
                            android:text="@string/buy"
                            android:id="@+id/tv_text_buy"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>