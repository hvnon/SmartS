<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_layout">

    <LinearLayout
        android:id="@+id/bottom_add_to_cart"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnLocation"
            android:layout_width="@dimen/icon_action_width"
            android:layout_height="@dimen/icon_action_height"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cart" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Add to cart"
            android:textSize="10sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_delete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/icon_action_width"
            android:layout_height="@dimen/icon_action_height"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/iv_product_photo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/example"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_description"
            android:layout_toRightOf="@+id/iv_product_photo"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:lines="2"
            android:text="Fashionable Men's Athletic Shoes With Color Matching and Letter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_product_photo"
            android:layout_below="@+id/tv_product_description"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_price_promotion"
                    android:textColor="@color/pink"
                    android:textSize="22sp"
                    android:text="$21.2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_price"
                    android:layout_below="@id/tv_product_price_promotion"
                    android:layout_alignRight="@id/tv_product_price_promotion"
                    android:textSize="15sp"
                    android:text="$21.2"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/grey"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/ln_size_color"
                    android:layout_toLeftOf="@+id/tv_status">

                    <!--<TextView-->
                        <!--android:layout_width="@dimen/product_info_number_width"-->
                        <!--android:layout_height="@dimen/product_info_number_height"-->
                        <!--android:gravity="center"-->
                        <!--android:background="@drawable/circle"-->
                        <!--android:backgroundTint="@android:color/black"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="12sp"-->
                        <!--android:text="34"-->
                        <!--android:id="@+id/tv_amount_touch"/>-->
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="Ready"
                    android:id="@id/tv_status"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>